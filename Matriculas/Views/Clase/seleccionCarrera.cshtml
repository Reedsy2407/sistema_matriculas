@{
    ViewData["Title"] = "Selección de Carrera";
}

<div class="container mt-3">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="alert alert-info d-flex align-items-center" role="alert">
        <div>
            <i class="bi bi-calendar-check me-2"></i>
            @if (ViewBag.CodigoPeriodoActual != null)
            {
                <strong>Período actual:</strong> @ViewBag.CodigoPeriodoActual
            }
            else
            {
                <span>No hay un período activo actualmente</span>
            }
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-book me-2"></i>Seleccione su carrera</h5>
        </div>
        <div class="card-body">
            <form asp-action="ProcesarSeleccion" method="post">
                <div class="mb-3">
                    <label for="carreraSelect" class="form-label">Carrera:</label>
                    <select class="form-select" id="carreraSelect" name="idCarrera" required>
                        <option value="">-- Seleccione una carrera --</option>
                        @foreach (var item in ViewBag.Carreras)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-arrow-right-circle me-2"></i>Siguiente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">