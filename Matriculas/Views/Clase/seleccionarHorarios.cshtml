@model Tuple<List<MatriculasMODELS.HorarioPorCurso>, MatriculasMODELS.Curso, int>
@{
    ViewData["Title"] = "Seleccionar Horarios";
    var horarios = Model.Item1;
    var curso = Model.Item2;
    var idCarrera = Model.Item3;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="bi bi-calendar3"></i> Horarios para: @curso.nom_curso
            </h2>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-4">
                <div>
                    <span class="badge bg-info text-dark">Créditos: @curso.creditos_curso</span>
                </div>
                <div>
                    <form asp-action="seleccionarCursos" method="get" class="d-inline">
                        <input type="hidden" name="idCarrera" value="@idCarrera" />
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a cursos
                        </button>
                    </form>
                </div>
            </div>

            @if (horarios == null || !horarios.Any())
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No se encontraron horarios disponibles para este curso.
                </div>
            }
            else
            {
                <form asp-action="ConfirmarMatricula" method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="idCurso" value="@curso.id_curso" />
                    <input type="hidden" name="idCarrera" value="@idCarrera" />

                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Selección</th>
                                    <th>Sección</th>
                                    <th>Día</th>
                                    <th>Horario</th>
                                    <th>Aula</th>
                                    <th>Docente</th>
                                    <th>Cupos</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var horario in horarios)
                                {
                                    <tr>
                                        <td>
                                            @if (horario.cupos_disponible > 0)
                                            {
                                                <input type="radio" name="idSeccion" value="@horario.id_seccion" required
                                                       class="form-check-input" id="seccion-@horario.id_seccion" />
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Sin cupos</span>
                                            }
                                        </td>
                                        <td>
                                            <label for="seccion-@horario.id_seccion" class="form-check-label">
                                                @horario.cod_seccion
                                            </label>
                                        </td>
                                        <td>@horario.dia_semana</td>
                                        <td>@horario.hora_inicio - @horario.hora_fin</td>
                                        <td>@horario.cod_aula</td>
                                        <td>@horario.nombre_docente</td>
                                        <td>
                                            <span class="badge @(horario.cupos_disponible <= 0 ? "bg-danger" : "bg-success")">
                                                @horario.cupos_disponible / @horario.cupos_maximos
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(horario.tipo_horario == "Teoria" ? "bg-primary" : "bg-warning text-dark")">
                                                @horario.tipo_horario
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Confirmar Matrícula
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>