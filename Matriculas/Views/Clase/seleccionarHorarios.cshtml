@model List<MatriculasMODELS.HorarioPorCurso>
@{
    ViewData["Title"] = "Horarios del Curso";
}

<div class="container">
    <h2>Horarios para: @ViewBag.NombreCurso</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card mb-4">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sección</th>
                            <th>Día</th>
                            <th>Hora</th>
                            <th>Tipo</th>
                            <th>Aula</th>
                            <th>Disponibilidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var horario in Model.OrderBy(h => h.cod_seccion))
                        {
                            <tr>
                                <td>@horario.cod_seccion</td>
                                <td>@horario.dia_semana</td>
                                <td>@horario.hora_inicio - @horario.hora_fin</td>
                                <td>@horario.tipo_horario</td>
                                <td>@horario.cod_aula</td>
                                <td>@horario.cupos_disponible/@horario.cupos_maximos</td>
                                <td>
                                    <form asp-action="MatricularseHorario" method="post">
                                        <input type="hidden" name="id_alumno" value="@Context.Request.Cookies["id_usuario"]" />
                                        <input type="hidden" name="id_carrera" value="@ViewBag.IdCarrera" />
                                        <input type="hidden" name="id_curso" value="@ViewBag.IdCurso" />
                                        <input type="hidden" name="id_seccion" value="@horario.id_seccion" />
                                        <input type="hidden" name="id_periodo" value="@ViewBag.CodigoPeriodoActual" />
                                        <button type="submit" class="btn btn-success">Escoger horario</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p>No hay horarios disponibles para este curso.</p>
    }

    <div class="mt-3">
        <a asp-action="seleccionarCursos"
           asp-route-idCarrera="@ViewBag.IdCarrera"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a cursos
        </a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: '¡Éxito!',
                        text: '@TempData["SuccessMessage"]'
                    });
            </text>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '@TempData["ErrorMessage"]'
                    });
            </text>
        }
    </script>
}
