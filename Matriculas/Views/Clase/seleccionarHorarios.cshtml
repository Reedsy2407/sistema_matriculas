@model List<MatriculasMODELS.HorarioPorCurso>
@{
    ViewData["Title"] = "Horarios del Curso";
    var idUsuario = ViewBag.IdUsuario;
    var matriculados = ViewBag.Matriculados as Dictionary<int, bool>;
}

<div class="container">
    <h2>Horarios para: @ViewBag.NombreCurso</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card mb-4">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sección</th>
                            <th>Día</th>
                            <th>Hora</th>
                            <th>Tipo</th>
                            <th>Aula</th>
                            <th>Disponibilidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var horario in Model.OrderBy(h => h.cod_seccion))
                        {
                            var estaMatriculado = matriculados != null && matriculados.ContainsKey(horario.id_seccion) && matriculados[horario.id_seccion];

                            <tr>
                                <td>@horario.cod_seccion</td>
                                <td>@horario.dia_semana</td>
                                <td>@horario.hora_inicio - @horario.hora_fin</td>
                                <td>@horario.tipo_horario</td>
                                <td>@horario.cod_aula</td>
                                <td>@horario.cupos_disponible/@horario.cupos_maximos</td>
                                <td>
                                    @if (!estaMatriculado)
                                    {
                                        <form asp-action="MatricularseHorario" method="post" style="display: inline;">
                                            <input type="hidden" name="idAlumno" value="@idUsuario" />
                                            <input type="hidden" name="idCarrera" value="@ViewBag.IdCarrera" />
                                            <input type="hidden" name="idCurso" value="@ViewBag.IdCurso" />
                                            <input type="hidden" name="idSeccion" value="@horario.id_seccion" />
                                            <input type="hidden" name="idPeriodo" value="@ViewBag.CodigoPeriodoActual" />
                                            <button type="submit" class="btn btn-success">Escoger horario</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="EliminarMatriculaPost" method="post" style="display: inline; margin-left: 5px;">
                                            <input type="hidden" name="idAlumno" value="@idUsuario" />
                                            <input type="hidden" name="idSeccion" value="@horario.id_seccion" />
                                            <input type="hidden" name="idPeriodo" value="@ViewBag.CodigoPeriodoActual" />
                                            <input type="hidden" name="idCurso" value="@ViewBag.IdCurso" />
                                            <input type="hidden" name="idCarrera" value="@ViewBag.IdCarrera" />
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p>No hay horarios disponibles para este curso.</p>
    }

    <div class="mt-3">
        <a asp-action="seleccionarCursos"
           asp-route-idCarrera="@ViewBag.IdCarrera"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a cursos
        </a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Mostrar mensajes de éxito/error
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: '¡Éxito!',
                        text: '@Html.Raw(TempData["SuccessMessage"])'
                    });
            </text>
        }
        else if (TempData["InfoMessage"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'info',
                        title: 'Información',
                        text: '@Html.Raw(TempData["InfoMessage"])'
                    });
            </text>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '@Html.Raw(TempData["ErrorMessage"])'
                    });
            </text>
        }

        // Confirmación para eliminar
        $(document).ready(function() {
            $('form[action*="EliminarMatriculaPost"]').submit(function(e) {
                e.preventDefault();

                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "¡Esta acción eliminará tu matrícula en este horario!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $(this).unbind('submit').submit();
                    }
                });
            });
        });
    </script>
}