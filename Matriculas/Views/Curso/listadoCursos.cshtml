@model IEnumerable<MatriculasMODELS.Curso>

@{
    ViewData["Title"] = "listadoCursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="mt-4 mb-4">Listado de Cursos</h1>
<div class="mb-3">
    <a asp-action="registrarCurso" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Registrar Curso
    </a>
</div>


<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id_curso)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_curso)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.creditos_curso)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_carrera)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_curso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_curso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.creditos_curso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_carrera)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "editarCurso", new { id = item.id_curso }, new { @class = "me-2" })
                                @Html.ActionLink("Asignar Horario", "AsignarHorarioCurso", new { idCurso = item.id_curso }, new { @class = "btn btn-sm btn-outline-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

