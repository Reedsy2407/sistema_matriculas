@model IEnumerable<MatriculasMODELS.Docente>

@{
    ViewData["Title"] = "listadoDocentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4 mb-4">Listado de Docentes</h1>
<div class="mb-3">
    <a asp-action="nuevoDocente" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Registrar Docente
    </a>
</div>

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                            <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id_docente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_docente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_especialidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estado)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id_docente</td>
                            <td>@item.nom_docente</td>
                            <td>@item.nom_especialidad</td>
                            <td>
                                @if (item.estado)
                                {
                                    <i class="fas fa-check-circle text-success fa-lg"></i>
                                }
                                else
                                {
                                    <i class="far fa-circle text-secondary fa-lg"></i>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "editarDocente", new { id = item.id_docente }, new { @class = "me-2" }) |
                                @Html.ActionLink("Detalles", "Detalles", new { id = item.id_docente }) |
                                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id_docente })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

