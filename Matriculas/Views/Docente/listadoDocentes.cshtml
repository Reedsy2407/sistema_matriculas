@model IEnumerable<Matriculas.Models.Docente>

@{
    ViewData["Title"] = "listadoDocentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4 mb-4">Listado de Docentes</h1>
<div class="mb-3">
    <a asp-action="nuevoDocente" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Registrar Docente
    </a>
</div>

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                            <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id_docente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_docente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_especialidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.activo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_docente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nom_docente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nom_especialidad)
                        </td>
                            <td class="text-center">
                                @if (item.activo)
                                {
                                    <i class="fas fa-check-circle text-success fa-lg"></i>
                                }
                                else
                                {
                                    <i class="far fa-circle text-secondary fa-lg"></i>
                                }
                            </td>
                        <td>
                            @Html.ActionLink("Edit", "editarDocente", new { id = item.id_docente }, new { @class = "me-2" }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>

