@model MatriculasMODELS.DocenteO

@{
    ViewData["Title"] = "editarDocente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Editar Docente</h1>

<div class="card shadow-sm p-4">
    <form asp-action="editarDocente">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="id_docente" class="form-label"></label>
            <input asp-for="id_docente" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="nom_docente" class="form-label"></label>
            <input asp-for="nom_docente" class="form-control" />
            <span asp-validation-for="nom_docente" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="cod_especialidad" class="form-label"></label>
            @Html.DropDownListFor(model => model.cod_especialidad, (SelectList)ViewBag.Especialidad, "Seleccione Especialidad",
                     new { @class = "form-select" })
            <span asp-validation-for="cod_especialidad" class="text-danger"></span>
        </div>

        <div class="form-check mb-4">
            <input asp-for="estado" class="form-check-input" />
            <label asp-for="estado" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-action="listadoDocentes" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        var msg = '@ViewBag.Mensaje';
        if (msg) {
          Swal.fire({
            title: msg,
            icon: msg.includes('correctamente') ? 'success' : 'error',
            timer: 2000,
            showConfirmButton: false
          });
        }
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
